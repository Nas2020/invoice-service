{
  "name": "invoice-service",
  "module": "src/app.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^18.3.12"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@react-pdf/renderer": "^4.0.0",
    "hono": "^4.6.9",
    "zod": "^3.24.1"
  },
  "scripts": {
    "start": "bun --env-file=.env run src/index.ts",
    "dev": "bun --hot run src/app.ts",
    "build": "bun build ./src/app.ts --outdir ./dist --target bun",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "migrate": "bun run scripts/migrate.ts",
    "generate-migration": "bun run scripts/generate-migration.ts",
    "migrate:fresh": "rm -f invoices.db && bun run scripts/migrate.ts",
    "db:seed": "bun run scripts/seed.ts",
    "db:refresh": "bun run migrate:fresh && bun run db:seed"
  }
}